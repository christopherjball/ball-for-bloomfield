---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const { title = 'Ball for Bloomfield — Chris Ball for Mayor' } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{title}</title>
        <meta property="og:title" content="Ball for Bloomfield — Chris Ball for Mayor" />
        <meta property="og:description" content="Practical leadership through strong partnerships. Let’s fix the basics and dream together." />
        <meta property="og:image" content="/images/logo.png" />
        <meta property="og:type" content="website" />
        <meta name="twitter:card" content="summary_large_image" />
        <link rel="stylesheet" href="/styles/site.css" />
    </head>
    <body>
        <Header />
        <main id="main" tabindex="-1">
            <slot />
        </main>
        <Footer />
    </body>
</html>
