---
import BaseLayout from '../layouts/BaseLayout.astro';

const url = new URL(Astro.request.url);
const formType = url.searchParams.get('form-type');
---

<BaseLayout title="Thank You — Ball for Bloomfield">
    <section class="page-hero">
        <div class="wrap"><h1>Thank You</h1></div>
    </section>

    <section class="section">
        <div class="wrap narrow">
            <p>
                {
                    formType === 'sign-request'
                        ? 'Thank you for requesting a yard sign! We’ll call or email to confirm your address before delivery.'
                        : formType === 'event-request'
                          ? 'Thank you for inviting Chris! We’ll follow up by phone or email to confirm details about your meeting.'
                          : 'We’ve received your request and will be in touch soon.'
                }
            </p>
            <p class="small">
                Want to head back? <a class="link-more" href="/">Return to the homepage</a> ·
                <a class="link-more" href="/#priorities">See priorities</a> ·
                <a class="link-more" href="/#about">About Chris</a>
            </p>
        </div>
    </section>
</BaseLayout>
